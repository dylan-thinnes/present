echo -e """
${bold}When Strings Just Won't Do:${plain}
${drama}Directories${plain} to the rescue!
"""

if [[ "$TMPDIR" == "" ]]; then
    TMPDIR=$(mktemp -d)
fi
(
    cd $TMPDIR
    simulate '# Create a simple tree structure'
    simulate 'mkdir -p tree/a tree/b tree/c/d tree/c/e'
    simulate 'find . # recursively prints every directory & file'
)

